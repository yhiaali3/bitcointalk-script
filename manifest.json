{
  "name": "Bitcointalk Script",
  "short_name": "Bitcointalk-Script",
  "version": "4.0.1",
  "manifest_version": 3,
  "description": "Extension for Bitcointalk â€” themes, zoom, direction, emoji toolbar and more",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_title": "Bitcointalk Script",
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.bitcointalk.org/*",
        "http://*.bitcointalk.org/*"
      ],
      "js": [
        "js/content.js"
      ],
      "run_at": "document_start",
      "all_frames": false
    },
    {
      "matches": [
        "https://*.bitcointalk.org/*",
        "http://*.bitcointalk.org/*"
      ],
      "css": [
        "css/quill.snow.css"
      ],
      "js": [
        "js/quill.min.js",
        "js/quill-editor.js"
      ],
      "run_at": "document_idle",
      "all_frames": false
    },
    {
      "matches": [
        "https://*.bitcointalk.org/*",
        "http://*.bitcointalk.org/*"
      ],
      "js": [
        "js/emoji-toolbar.js",
        "js/emoticon-replacer.js"
      ],
      "run_at": "document_idle",
      "all_frames": false
    },
    {
      "matches": [
        "https://bitcointalk.org/index.php?*"
      ],
      "js": [
        "js/editor-image-uploader.js"
      ],
      "run_at": "document_start",
      "all_frames": false
    }
  ],
  "host_permissions": [
    "https://*.bitcointalk.org/*",
    "http://*.bitcointalk.org/*"
  ],
  "permissions": [
    "storage"
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "css/bitcointalk/*.css",
        "css/quill.snow.css",
        "js/quill.min.js",
        "js/quill-editor.js",
        "js/page-inject.js",
        "icons/*.png",
        "images/bitcoin.png",
        "images/emojis/*",
        "css/popup.css"
      ],
      "matches": [
        "https://*.bitcointalk.org/*",
        "http://*.bitcointalk.org/*"
      ]
    }
  ]
}